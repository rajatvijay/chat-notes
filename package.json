{
  "name": "chat-notes",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "test": "vitest run --coverage",
    "build": "pnpm -r run build",
    "a11y": "pa11y-ci --config pa11y.json",
    "lh": "lighthouse http://localhost:4173 --budget-path=lighthouse-budget.json --quiet --chrome-flags=\"--headless\"",
    "dev": "pnpm -r run dev",
    "dev:web": "cd apps/web && pnpm dev",
    "dev:backend": "node server.js",
    "dev:all": "concurrently \"pnpm dev:backend\" \"pnpm dev:web\"",
    "dev:full": "vercel dev",
    "dev:supabase": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset",
    "supabase:status": "supabase status",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset",
    "preview": "pnpm -r run preview",
    "e2e": "playwright test"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.40.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^0.34.0",
    "concurrently": "^8.2.0",
    "jsdom": "^22.1.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "globals": "^13.20.0",
    "lighthouse": "^10.4.0",
    "pa11y-ci": "^3.0.1",
    "prettier": "^3.0.0",
    "typescript": "^5.0.2",
    "vercel": "^33.0.0",
    "vitest": "^0.34.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}